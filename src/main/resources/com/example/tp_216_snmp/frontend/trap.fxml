<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tp_216_snmp.frontend.SnmpController" stylesheets="@style.css">
    <!-- Top: Header -->
    <top>
        <VBox styleClass="header">
            <Label text="Opération SNMP : Get" styleClass="header-title"/>
            <Separator/>
        </VBox>
    </top>

    <!-- Center: Get Operation -->
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Machine :" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label"/>
            <Label fx:id="selectedDeviceLabel" text="Aucune machine sélectionnée" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="OID :" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label"/>
            <TextField fx:id="oidField" promptText="Entrer un OID (ex: 1.3.6.1.2.1.1.1.0)" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <Button fx:id="executeGetButton" text="Exécuter Get" onAction="#executeGet" styleClass="action-button">
                    <tooltip><Tooltip text="Récupérer la valeur de l'OID"/></tooltip>
                </Button>
                <Button fx:id="backButton" text="Retour" onAction="#navigateToHome" styleClass="action-button">
                    <tooltip><Tooltip text="Retour à l'accueil"/></tooltip>
                </Button>
            </HBox>

            <Label text="Résultats :" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label"/>
            <TextArea fx:id="resultArea" editable="false" prefHeight="200" prefWidth="500" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" alignment="CENTER_LEFT" style="-fx-padding: 5;">
            <Label fx:id="statusLabel" text="Prêt"/>
        </HBox>
    </bottom>
</BorderPane>